{{#if notFriends}}
    <div class="suggestion-friedns-find">
        <img src="/img/people.png" id="img-people">
        <p id="people">People</p>
        <h2>View all</h2>
    </div>
    <div class="friends-find">
        {{#each notFriends}}
        <form class="form-friends-find" method="POST" action="/users/friends/request">
            {{> user}}
            <input type="hidden" name="Id" value="{{this._id}}" />
            <input type="submit" value="Add Friend">
        </form>
        {{/each}}
    </div>
{{else}}
  <div class="suggestion-friedns-find">
        <img src="/img/people.png" id="img-people">
        <p id="people">People</p>
        <h2>View all</h2>
    </div>
    <div class="friends-find">
      <p style="text-align:center; font-family:serif; padding:2rem;">Could not find any persons</p>
    </div>
{{/if}}